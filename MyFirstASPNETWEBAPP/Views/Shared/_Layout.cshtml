<!DOCTYPE html>

<html>
<!-- Standard Layout Format Applied to Every cshtml Page -->
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Header with page title, css links, and web icon -->

    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/default.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/img/icons8-menu-94.png">
</head>
<body>

    <!-- Nav to navigate and return pages on each page -->
    <nav>
        <a asp-controller="Blah" asp-action="Index">Home</a>
        <a asp-controller="Blah" asp-action="GradeCalc">Grade Calculator</a>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer>This is the footer</footer>

    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>

</body>
</html>
